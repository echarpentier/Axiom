<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
 
<properties>
	<!-- Database -->
		<entry key="JDBCDriver">com.mysql.jdbc.Driver</entry>
		<entry key="JDBCConnectionURL">jdbc:mysql://localhost:3306/Axiom_db</entry>
		<entry key="DBlogin">axiom</entry>
		<entry key="DBpassword">axiom</entry>
		<entry key="ConnectionPoolSize">5</entry>
		<entry key="ConnectionPoolMax">20</entry>
		<entry key="AxiomPathReplacementInDB">__AXIOMPATH__</entry>
		<entry key="DataPathReplacementInDB">__DATAPATH__</entry>
		
	<!-- Number of threads authorized -->
		<entry key="MaxQCAnalysis">1</entry>
		<entry key="MaxGenoAnalysis">2</entry>
		
	<!-- Data Path -->
		<entry key="DataPath">/media/Disk1To/Axiom</entry>
		
	<!-- Main Application Path -->
		<entry key="AxiomPath">/media/Disk1To/Axiom</entry>
		
		<!-- Application Paths under main application path -->
      	  	<entry key="AxiomPath.ArrayImagePath">ArrayImages</entry>
      	  	<entry key="AxiomPath.ImageNotFoundPath">INF.jpg</entry>
        	<entry key="AxiomPath.AnalysisPath">Analysis</entry>
        
		<!-- Affymetrix Library Files -->
			<!-- 
			<entry key="AxiomPath.AffxLibraryFiles">LibraryFiles/axiomgwas_husnp_1_r4</entry>
			-->
			<entry key="AxiomPath.AffxLibraryFilesFolder">LibraryFiles</entry>
			
		<!-- Affymetrix Annotation Files -->
			<!-- 
			<entry key="AxiomPath.AffxAnnotationFile">AnnotationFiles/Axiom_GW_Hu_SNP.na32.annot.csv</entry>
			-->
			<entry key="AxiomPath.AffxAnnotationFilesFolder">AnnotationFiles</entry>
				
		<!-- R Scripts Folder -->
			<entry key="AxiomPath.Rscripts">R_scripts</entry>
			
		<!-- Database Creation File -->
			<entry key="AxiomPath.DatabaseCreationFile">axiom.sql</entry>
			
		<!-- Temporary Folder -->
			<entry key="AxiomPath.temporaryFolder">tmp</entry>
		
	<!-- APT Bin Folder -->
		<entry key="APTbinPath">/media/Disk1To/Axiom/apt-1.14.2-i386-intel-linux/bin</entry>
		
	<!-- Rscript Bin Folder -->
		<entry key="RscriptBinPath">/usr/bin/Rscript</entry>
</properties>