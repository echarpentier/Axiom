		<!-- Affymetrix Library Files -->
			<entry key="AxiomPath.AffxLibraryFilesFolder">LibraryFiles</entry>
			
		<!-- Affymetrix Annotation Files -->
			<entry key="AxiomPath.AffxAnnotationFilesFolder">AnnotationFiles</entry>
			
		<!-- Temporary Folder -->
			<entry key="AxiomPath.temporaryFolder">tmp</entry>
		
	<!-- APT Bin Folder -->
		<entry key="APTbinPath">/home/eric/programs/apt-1.15.1-x86_64-intel-linux/bin</entry>
		
